  <footer>
    Click the cat to increase your score!
  </footer>

  <script>
    let score = 0;
    const cat = document.getElementById('cat');
    const scoreDisplay = document.getElementById('score');

    cat.addEventListener('click', () => {
      score++;
      scoreDisplay.textContent = "Score: " + score;
    });
  </script>

